{
    "env": {
        "browser": true,
        "es2021": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "eslint:recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json",
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly":"warn",
        "eqeqeq":"warn",
        "no-redeclare":"warn",
        "no-throw-literal":"warn",
        "semi": "off",
        "@typescript-eslint/semi": ["warn", "always"],
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/member-delimiter-style": [
            "warn",
            {
                "multiline": {
                    "delimiter": "semi",
                    "requireLast": true
                },
                "singleline": {
                    "delimiter": "semi",
                    "requireLast": false
                }
            }
        ]
    }
}
